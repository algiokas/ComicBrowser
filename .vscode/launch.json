{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Books API",
        "type": "node",
        "request": "launch",
        "skipFiles": ["<node_internals>/**"],
        "program": "${workspaceFolder}\\api\\bin\\www",
        "cwd": "${workspaceFolder}\\api"
      },
      {
        "name": "Videos API",
        "type": "node",
        "request": "launch",
        "skipFiles": ["<node_internals>/**"],
        "program": "D:\\Videos\\Porn\\api\\bin\\www",
        "cwd": "D:\\Videos\\Porn\\api"
      },
      {
        "name": "Client",
        "type": "node",
        "request": "launch",
        "cwd": "${workspaceFolder}\\client",
        "runtimeExecutable": "npm",
        "runtimeArgs": [
            "run-script", "start"
        ]
      },
      {
        "name": "WebBrowser",
        "type": "chrome",
        "request": "launch",
        "url": "http://localhost:3000",
        "webRoot": "${workspaceFolder}/dist",
        "sourceMaps": true, 
        "presentation": {
          "hidden": true,
          "group": "",
          "order": 1
        },
        "preLaunchTask": "Sleepdelay"
      }
    ],
    "compounds": [
      {
        "name": "Start All - No Videos",
        "configurations": ["Books API", "Client", "WebBrowser"],
        "stopAll": true
      },
      {
        "name": "Start All",
        "configurations": ["Books API", "Videos API", "Client", "WebBrowser"],
        "stopAll": true
      }
    ]
  }